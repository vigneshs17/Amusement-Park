<p id="notice"><%= notice %></p>

<h2>Rides</h2>

<table>
  <thead>
    <tr>
      <th>Ride number</th>
      <th>Ride name</th>
      <th>Park name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.rno %></td>
        <td><%= ride.rname %></td>
        <td><%= @park["#{ride.exists_in}".to_i-1][0] %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ride', new_ride_path %>
